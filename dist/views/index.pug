extends layout

block content
  .container
    h2= title
    .row
      h5 Online Users
      #userList
    .row
      ul.collection#messages
    .row
      form#chatForm.col.s8(action='')
        .row
          .input-field.col.s8
            i.material-icons.prefix mode_edit
            input#newMessage.validate(type='text', maxlength='120', name='newMessage', autocomplete='off')
            label(for='newMessage') Message
          .col.s2
            button.btn-floating.btn-large.waves-effect.waves-light(type='submit')
              i.material-icons.right send
          .col.s2
            button#emptyChat.btn-floating.btn-large.waves-effect.waves-light.red
              i.material-icons.right delete_forever
      .col.s2
      form#imageSubmit.col.s4(action='')
        .row
          .col.s12
            input#image.dropify(type='file' data-max-file-size='2M', data-height='70')
block scripts
  script(src='/socket.io/socket.io.js')
  script(src='js/chat.js')
